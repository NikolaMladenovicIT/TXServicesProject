@model tx12.Models.Konferencija

@{
    ViewData["Title"] = "KerirajKonferenciju";
}

<section class="section courses" data-section="section4">
    <div class="col-md-12">
        <div class="section-heading">
            <h2>Unesite novu konferenciju</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4" style="color: #0c182e; align-content: center; margin-left: 33.5%; background-color: #fabf343d; width: 100px; ">
            <form asp-action="KerirajKonferenciju">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Naziv" class="control-label"></label>
                    <input asp-for="Naziv" class="form-control" />
                    <span asp-validation-for="Naziv" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DatPocetka" class="control-label"></label>
                    <input asp-for="DatPocetka" class="form-control" />
                    <span asp-validation-for="DatPocetka" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DatZavrsetka" class="control-label"></label>
                    <input asp-for="DatZavrsetka" class="form-control" />
                    <span asp-validation-for="DatZavrsetka" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdOrganizatora" class="control-label" hidden></label>
                    <input asp-for="IdOrganizatora" class="form-control" value="101" hidden />
                    <span asp-validation-for="IdOrganizatora" class="text-danger" hidden></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" style="color: #172238; width: 100px; background-color: #f5a4257a;margin-left: 29%;" />
                </div>
            </form>
        </div>
    </div>
    </section>
